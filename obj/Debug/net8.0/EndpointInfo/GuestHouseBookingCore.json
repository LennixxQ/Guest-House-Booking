  "components": {
    "schemas": {
      "LoginDto": {
        "required": [
          "emailOrUsername",
          "password"
        ],
        "type": "object",
        "properties": {
          "emailOrUsername": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RegisterDto": {
        "required": [
          "email",
          "empName",
          "password"
        ],
        "type": "object",
        "properties": {
          "empName": {
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "Role": {
        "enum": [
          0,
          1
        ],
        "type": "integer",
        "format": "int32"
      },
      "UpdateUserDto": {
        "type": "object",
        "properties": {
          "empName": {
            "type": "string",
            "nullable": true
          },
          "userName": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "userRole": {
            "$ref": "#/components/schemas/Role"
          }
        },
        "additionalProperties": false
      }
    }
  }
